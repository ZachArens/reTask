<div class="jumbotron-fluid">
  <div class="container">
    <h1 id="frontpage-title">reTask</h1>
    <p><a class="btn btn-primary btn-lg" href="/movements" role="button">See your movements</a></p>
    <p><a class="btn btn-primary btn-lg" href="/movements/new" role="button">Start a new movement</a></p>
  </div>
</div>

<div class="container-fluid">

  <div class="row">
    <% @movements.each do |movement| %>
      <div class="col-md-4">
        <h2><%=movement.name%></h2>
        <p><%=movement.description.truncate_words(30)%></p>
        <p>
          <%= link_to 'show', movement, class: "btn btn-default"%>
        </p>
      </div>
    <% end %>
  </div>

</div>
