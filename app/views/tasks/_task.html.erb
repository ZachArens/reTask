<form class="task-form">

  <%= render 'tasks/form', task: task %>

        <div class="form-group col-4">
          <%= link_to "Delete task", movement_task_path(@movement, task), method: :delete, class: "form-control btn btn-warning" %>
        </div>
        <div class="form-group col-4">
          <p class="form-control btn btn-secondary"><%= task.id %> | <%= link_to "Preview #{task.name}", movement_task_path(@movement, task) %></p>

        </div>
    </div><!--this div closes div inside _form.html form-row-->
</form>

