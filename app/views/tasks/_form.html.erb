<%= form_with(model: [@movement, task], local: true) do |form| %>

    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-row">
      <div class="field form-group col">
        <%= form.number_field :order_number, class: "form-control" %>
      </div>

      <div class="field form-group col-9">
        <%= form.text_field :name, placeholder: :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-row">
      <div class="field form-group col-sm-12">
        <%= form.text_field :text_build, placeholder: "Build your task text here", class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="field form-group col-sm-6">
        <%= form.label :task_type, "Task Type", class: "form-control" %>
      </div>
      <div class="field form-group col-sm-6">
        <%= form.text_field :link, placeholder: "www.link.com", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="actions form-group col-4">
        <%= form.submit id: 'submit', data: {disable_with: false}, class: "form-control btn btn-success"%>
      </div>
<% end %>
