<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Text build</th>
      <th>Link</th>
      <th>Task Type</th>
      <th>Order number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.text_build %></td>
        <td><%= task.link %></td>
        <td><%= task.task_type %></td>
        <td><%= task.order_number %></td>
        <td><%= task.id %></td>
        <td><%= link_to 'Show', movement_task_path(task.movement_id, task) %></td>
        <td><%= link_to 'Edit', edit_movement_task_path(task.movement_id, task) %></td>
        <td><%= link_to 'Destroy', movement_task_path(task.movement.id, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
